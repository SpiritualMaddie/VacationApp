@model IEnumerable<Vacation.Models.VacationList>

@{
    ViewData["Title"] = "Details";
}

<h1>Leave of absence - details per month</h1>

@if (Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Employee")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VacationTypes.VacationTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VacCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employees.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VacationTypes.VacationTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VacCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No leave of absence applications found for the selected month.</p>
}

<br />
<div>
    <a class="btnA" asp-action="Index">Go back</a>
</div>